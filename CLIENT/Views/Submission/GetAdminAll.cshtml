@model IEnumerable<API.ViewModels.SubmissionAF>

@{
    ViewData["Title"] = "GetAdminAll";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <div class="card" style="padding:2em">
        <div class="card-body">
            <h1 align="center">Asset Data</h1>
        </div>

        <table class="table table-hover dt-responsive table-striped nowarp" id="dataTableGetSubmissionAdmin" style="width:100%">
            <thead class="table-active head-table text-center">
                <tr class="bg-primary column-tab">
                    <th scope="col" class="text-light text-center">Asset Name</th>
                    <th scope="col" class="text-light text-center">Volume</th>
                    <th scope="col" class="text-light text-center">Good Condition</th>
                    <th scope="col" class="text-light text-center">Broken Condition</th>
                    <th scope="col" class="text-light text-center">Asset Location</th>
                    <th scope="col" class="text-light text-center">Years of Submission</th>
                    <th scope="col" class="text-light text-center">Action</th>
                    
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal Detail-->
<div class="modal fade" id="DetailModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="DetailModal">Asset Detail</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="Detail">
                <div class="row">

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Edit-->
<div class="modal fade" id="EditModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Asset Edit</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="AssetName">Asset Name</label>
                        <input type="text" class="form-control" id="AssetName" required>
                    </div>
                    <div class="form-group">
                        <label for="goodAsset">Good Asset</label>
                        <input type="number" class="form-control" id="GoodAsset" required>
                    </div>
                    <div class="form-group">
                        <label for="BrokenAsset">Broken Asset</label>
                        <input type="number" class="form-control" id="BrokenAsset" required>
                    </div>
                    <div class="form-group">
                        <label for="AssetCategory">Asset Category</label>
                        <input type="number" class="form-control" id="AssetCategory" required>
                    </div>
                    <div class="form-group">
                        <label for="AssetLocation">Asset Location</label>
                        <input type="number" class="form-control" id="AssetLocation" required>
                    </div>
                    <div class="form-group">
                        <label for="Years">Years Of Submission</label>
                        <input type="number" class="form-control" id="Years" required>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save Change" class="btn btn-primary" id="buttonEdit" />
                    </div>
                </form>
                <div class="modal-footer">
                    @*<button type="submit" class="btn btn-primary" id="buttonAdd">Submit</button>*@
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script src="~/js/SubmissionAdminAll/Submission.js"></script>
}

