@{
    ViewData["Title"] = "ChangePass";
    Layout = "_EmployeeLayout";
}
<div class="container-fluid">
    <div class="card" style="padding:2em">
        <h5 class="title">Change Password</h5>
        <form>
            <div class="form-group">
                <label for="OldPass">Old Password</label>
                <input type="text" class="form-control" id="OldPass" required>
            </div>
            <div class="form-group">
                <label for="NewPass">New Password</label>
                <input type="text" class="form-control" id="NewPass" required>
            </div>
            <div class="form-group">
                <input type="submit" value="Change" class="btn btn-primary" id="buttonAdd" />
            </div>
        </form>
    </div>
</div>
@section Scripts
{
    
    <script src="~/js/ChangePass/ChangePass.js"></script>
}